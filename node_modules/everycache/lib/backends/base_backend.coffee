class BaseBackend
    ###
    Базовый класс кэш-бэкэнда.
    ###
    constructor: (@_options) ->
        @_inited = false

    _init: () ->
        return if @_inited
        @_inited = true

    get: (key, callback) ->
        ###
        Получает значение из кэша.
        @param key: string
        @param callback: function
        ###
        @_init(callback)

    multipleGet: (keys, callback) ->
        ###
        Получает массив значений из кэша.
        @param keys: array
        @param callback: function
        ###
        @_init(callback)

    set: (key, value, callback) ->
        ###
        Добавляет значение в кэш.
        @param key: string
        @param callback: function
        ###
        @_init(callback)

    multipleSet: (data, callback) ->
        ###
        Добавляет множество значений в кэш.
        @param data: object - key: value
        @param callback: function
        ###
        @_init(callback)

    remove: (key, callback) ->
        ###
        Удаляет из кэша значение.
        @param key: string
        @param callback: function
        ###
        @_init(callback)

    multipleRemove: (keys, callback) ->
        ###
        Удаляет из кэша множество значений.
        @param key: string
        @param callback: function
        ###
        @_init(callback)

    clear: (key, callback) ->
        ###
        Очищает кэш.
        @param callback: function
        ###
        @_init(callback)

module.exports = BaseBackend
